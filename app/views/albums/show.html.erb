<% title "Album" %>
 
<p>
  <strong>Name:</strong>
  <%=h @album.name %>
</p>
 
<% for photo in @album.photos %>
  <p><%= image_tag(photo.data(:thumb)) %></p>
<% end %>
 
<p>
  <%= link_to "Edit", edit_album_path(@album) %> |
  <%= link_to "Destroy", @album, :confirm => 'Are you sure?', :method => :delete %> |
  <%= link_to "View All", albums_path %>
</p>

